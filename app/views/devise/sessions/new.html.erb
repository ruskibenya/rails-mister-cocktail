<div class="row">
  <div class="col-1"></div>
  <%= link_to root_path, class: "col-10" do %>
    <%= image_tag 'TENDER.png', class: 'center-logo' %>
  <% end %>
  <div class="col-1"></div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: "EMAIL", class: "pink-skinny-round-btn" },
                label: false %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", placeholder: "PASSWORD", class: "pink-skinny-round-btn" },
                label: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
