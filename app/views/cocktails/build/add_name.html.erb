<div class="container add_name">
  <h1>CREATE A COCKTAIL</h1>
  <h3>STEP 1/3</h3>

  <%= simple_form_for(@cocktail, url: wizard_path, html: {class: ""}) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
    <%= f.input :name,
    label: "NAME",
    require: true,
    autofocus: true,
    input_html: {class: "pink-skinny-round-btn"} %>
    <%= f.input :photo,
    label: "PHOTO",
    require: true,
    autofocus: true,
    input_html: {class: "pink-skinny-round-btn"} %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :description,
    label: "DESCRIPTION",
    require: true,
    autofocus: true,
    input_html: {class: "pink-skinny-round-btn"} %>
    <%= f.input :difficulty,
    label: "DIFFICULTY",
    require: true,
    autofocus: true,
    input_html: {class: "js-range-slider-diff"} %>
    <%= f.input :prep_time,
    label: "PREP TIME",
    require: true,
    autofocus: true,
    input_html: {class: "js-range-slider-prep"} %>

    <div class="row">
      <div class="col-6">
        <%= f.input :base_spirit, collection: ["RUM", "VODKA", "GIN", "BOURBON", "ABSINTHE", "BRANDY", "COGNAC", "CACHACA", "CANADIAN WHISKY", "IRISH WHISKEY", "MEZCAL", "PISCO", "RYE WHISKEY", "SCOTCH", "TEQUILA", "VERMOUTH", "WHISKEY"],
        label: "BASE SPIRIT",
        require: true,
        autofocus: true,
        input_html: {class: "pink-skinny-round-btn"} %>
        <i class="fas fa-chevron-down"></i>
      </div>
      <div class="col-6">
      <%= f.input :glass, collection: ["BEER MUG", "CHAMPAGNE FLUTE", "COCKTAIL/MARTINI", "CORDIAL", "COUPE/COUPETTE", "HIGHBALL/COLLINS", "HURRICANE", "MARGARITA", "MASON JAR", "MOSCOW MULE", "MUG", "OLD FASHIONED/ROCKS", "PINT", "PUNCH", "SHOT", "SNIFTER", "WINE GLASS", "OTHER"],
      label: "GLASS",
      require: true,
      autofocus: true,
      input_html: {class: "pink-skinny-round-btn"} %>
      <i class="fas fa-chevron-down"></i>
      </div>
    </div>

    <%= f.input :flavor, collection: ["BITTER", "BUBBLY", "CREAMY", "FRUITY", "HERBACEOUS", "SALTY/SAVORY", "SMOKY", "SOUR", "SPICY", "SPIRIT-FORWARD", "SWEET"],
    as: :check_boxes,
    label: "FLAVOR",
    require: true,
    autofocus: true,
    input_html: {class: "asshole"} %>

    </div>
    <div class="form-actions row">
      <div class="col-3"></div>
      <%= button_tag(type: 'submit', class: "button grn-btn col-6") do %>
        NEXT
        <i class="fas fa-angle-right"></i>
      <% end %>
      <div class="col-3"></div>
    </div>
  <% end %>
</div>

<script>
  flavors = document.querySelectorAll(".form-check");
  flavors.forEach((flavor) => {
    flavor.classList.toggle("not-selected");
    flavor.addEventListener("click", (event) => {
      label = flavor.querySelector('.collection_check_boxes');
      label.classList.toggle("selected");
      flavor.classList.toggle("selected");
      flavor.classList.toggle("not-selected");
      console.log(label.classList);
    })
  })
</script>
