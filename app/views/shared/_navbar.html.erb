<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "TENDER.png" %>
  <% end %>

    <i class="fas fa-search"></i>
    <div class="dropdown">
      <%= button_tag(type: "button", class: "dropdown-toggle", id: "dropdownMenuButton", data: {toggle: "dropdown"}, 'aria-haspopup': true, 'aria-expanded': false ) do %>
        <%= image_tag current_user.photo, class: "avatar"%>
      <% end %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <%= link_to "Add A Cocktail", "#", class: "dropdown-item" %>
        <%= link_to "My Cocktails", my_cocktails_path, class: "dropdown-item" %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>



  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
